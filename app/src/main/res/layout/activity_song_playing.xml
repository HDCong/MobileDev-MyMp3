<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background">
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/buttonBack"
        android:background="@drawable/back"
        android:textStyle="bold"
        android:onClick="onClickButtonBack"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewName"
        android:text="Song name"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:layout_below="@id/buttonBack"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSingerMain2"
        android:text="Singer name"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_below="@id/textViewName"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="#000" />


    <LinearLayout
        android:id="@+id/linearDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/circleImageView"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:id="@+id/currentDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />
        <SeekBar
            android:id="@+id/seekbarSong"
            android:layout_width="wrap_content"
            android:clickable="false"
            android:outlineAmbientShadowColor="#000"
            android:layout_height="wrap_content"
            android:layout_weight="9" />
        <TextView
            android:id="@+id/songDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="00:00"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearButton"
        android:orientation="horizontal"
        android:layout_below="@id/linearDuration"
        android:layout_margin="10dp"
        android:gravity="center">
        <ImageButton
            android:src="@drawable/slow"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageButtonSlow"
            android:scaleType="fitXY"
            android:background="@null"
            android:onClick="slowForward"/>

        <ImageButton
            android:src="@drawable/pause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/imageButtonPlay"
            android:scaleType="fitXY"
            android:background="@null"
            android:onClick="playAndPause"/>

        <ImageButton
            android:src="@drawable/fast"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageButtonFast"
            android:scaleType="fitXY"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:onClick="fastForward"/>
    </LinearLayout>

</RelativeLayout>